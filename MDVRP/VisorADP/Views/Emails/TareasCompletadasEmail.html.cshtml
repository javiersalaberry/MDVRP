<p style='text-indent: 15px;'>Número de orden     :  @ViewBag.NumeroOrden <BR>
<p style='text-indent: 15px;'>Link del archivo : <a href = '@ViewBag.UrlKMZ'>@Html.EmbedImage("~/Assets/img/kmz.png")</a><BR> 
</font>
