@model VisorADP.Models.Olvido

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

         <link rel="icon" href="~/Assets/img/Iso38.ico" />
    <title>ADP - FertiFácil</title>

    <link rel="stylesheet" href="../Assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../Assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="../Assets/css/bootstrapValidator.css" />

    <!-- ace styles -->
    <!-- <link rel="stylesheet" href="assets/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />	-->

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="../Assets/js/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="../Assets/js/bootstrapValidator.js"></script>*@
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
    @* @Scripts.Render("~/Assets/js/registro.js")*@
    <style>
        .login-panel {
            margin-top: 5%;
        }

        .politica {
            text-align: justify;
            font-size: 10px;
        }
    </style>
    <link rel="shortcut icon" type="image/x-icon" href="../Assets/img/ADPHomeImages/Materiales/Iso38.ico" />

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="login-panel panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Olvido de contraseña</strong></h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("EnviarPassReset", "Home", FormMethod.Post, new { id = "defaultForm", @class = "form-horizontal" }))
                        {
                            <div>
                                <p class="resetTitulo">
                                    <strong>¿Olvido su contraseña?</strong>
                                </p>
                                <p class="resetTitulo">
                                    Introduzca la dirección de correo electrónico asociado a su cuenta ADP FertiFácil y le enviaremos un email con un enlace para reiniciar su contraseña.
                                </p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Email, new { @class = "col-lg-2 control-label" })
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>         
                            <div class="form-group">
                                <div class="col-lg-9 col-lg-offset-2">
                                    <button type="submit" class="btn btn-success">Enviar</button>
                                    @Html.ActionLink("Cancelar", "ADPHome", "Home", null, new { @class = "btn btn-danger col-lg-offset-9" })
                                </div>
                            </div>      
                             <div> 
                                <div id="errorMsg" class="text-danger">@TempData["ErrorMsg"]</div> 
                            </div>                           
                        }
                    </div>
                    
                </div>
            </div>
        </div>
    </div>


    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script type="text/javascript" src="../Assets/js/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch(["../Assets/img/ADPHomeImages/ima1.png", "../Assets/img/ADPHomeImages/ima2.png", "../Assets/img/ADPHomeImages/ima3.png", "../Assets/img/ADPHomeImages/ima4.png"], { speed: 500, fade: 750, duration: 4000 });
        //$.backstretch(["ima1.png", "ima2.png", "ima3.png", "ima4.png"], { speed: 500, fade: 750, duration: 4000 });
    </script>

</body>

</html>
